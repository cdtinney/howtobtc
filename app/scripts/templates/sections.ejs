<div class="masthead">

  <!-- title -->
  <h3 class="text-muted"><%= title %></h3>
  
  <!-- navbar -->
  <nav>
   
    <!-- list of sections -->
    <ul class="nav nav-justified">      
    
      <!-- create a list item for each section -->
      <% _.each(sections, function(section) { %>
        <li id="<%= section.get('id') %>">
          <a href="#section/<%= section.get('id') %>">
            <%= section.get('title') %>
          </a>
        </li>
      <% }); %>
      
    </ul>
    
  </nav>
  
</div>